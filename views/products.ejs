<!-- views/products.ejs -->
<div>
    <h1 class="text-3xl font-bold text-gray-900 mb-6">Our Products</h1>
  
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% products.forEach(product => { %>
        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="p-5">
            <div class="flex justify-center">
              <img src="<%= product.image || 'https://placehold.co/300x200' %>" alt="<%= product.name %>" class="h-48 object-cover">
            </div>
            <h3 class="mt-4 text-lg font-medium text-gray-900"><%= product.name %></h3>
            <p class="mt-1 text-gray-600 text-sm truncate"><%= product.description || 'No description available' %></p>
            <p class="mt-2 text-gray-900 font-bold">$<%= product.price.toFixed(2) %></p>
            <div class="mt-4">
              <a href="/products/<%= product._id %>" class="text-indigo-600 hover:text-indigo-500">
                View Details
              </a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>