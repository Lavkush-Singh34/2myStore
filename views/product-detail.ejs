<!-- views/product-detail.ejs -->
<div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <h1 class="text-2xl font-bold text-gray-900"><%= product.name %></h1>
    </div>
    <div class="border-t border-gray-200">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 p-6">
        <div>
          <img src="<%= product.image || 'https://placehold.co/600x400' %>" alt="<%= product.name %>" class="w-full h-auto object-cover rounded-lg">
        </div>
        <div>
          <p class="text-sm text-gray-500 mb-4"><%= product.category %></p>
          <p class="text-gray-700 text-base mb-4"><%= product.description || 'No description available' %></p>
          <p class="text-2xl font-bold text-gray-900 mb-4">$<%= product.price.toFixed(2) %></p>
          <p class="text-gray-700 mb-6">In Stock: <%= product.stock || 0 %></p>
          
          <button class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded w-full">
            Add to Cart
          </button>
        </div>
      </div>
    </div>
  </div>